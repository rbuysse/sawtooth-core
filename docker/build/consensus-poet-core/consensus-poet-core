set -e

info() {
    echo -e "\033[0;35m\n[--- $1 ---]\n\033[0m"
}

info "installing sawtooth deps"

mkdir /debs
cd /debs
cp /project/sawtooth-core/build/debs/python3-sawtooth*.deb /debs
dpkg-scanpackages . /dev/null | gzip -9c > Packages.gz
echo "deb file:/debs ./" >> /etc/apt/sources.list
apt-get update
apt-get install -y -q --allow-unauthenticated python3-sawtooth-poet-common \
    python3-sawtooth-poet-simulator \
    python3-sawtooth-signing \
    python3-sawtooth-validator

info "Building consensus/poet/core"

# 1. Set PYTHONPATH required for unit tests
build_dir=/project/sawtooth-core
pypath=$build_dir/signing
pypath=$pypath:$build_dir/validator
pypath=$pypath:$build_dir/consensus/poet/common
pypath=$pypath:$build_dir/consensus/poet/common/tests
pypath=$pypath:$build_dir/consensus/poet/core
pypath=$pypath:$build_dir/consensus/poet/core/tests
pypath=$pypath:$build_dir/consensus/poet/simulator
export PYTHONPATH=$pypath

cd /project/sawtooth-core/consensus/poet/core

# 2. Cleanup previous builds
if [ -d "debian" ]
then
    rm -rf debian
fi
python3 setup.py clean --all


# 2. Build the package
python3 setup.py --command-packages=stdeb.command debianize

if [ -d "packaging/ubuntu" ]
then
    cp -R packaging/ubuntu/* debian/
fi

dpkg-buildpackage -b -rfakeroot -us -uc

# 3. Install the package
dpkg -i ../*.deb
mv ../*.deb /project/sawtooth-core/build/debs
